<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">Categorias</h1>
      <p class="lead text-muted">Una librería online.</p>
      <p>
        <a href="/create-categorias" class="btn btn-primary my-2">Agregar nueva categoria</a>
      </p>
    </div>
  </div>
</section>

<div class="d-flex justify-content-center mb-3">
  <h1 class="fw-light fw-bold">Categorias agregadas</h1>
</div>

<div class="album py-3 bg-light">
  <div class="container">

    <div class="row">

      {{#if hasCategorias}}

        {{#each categorias as |categoria|}}

          <div class="card text-center col-md-2 ms-3">
            <div class="card-body">
              <h5 class="card-title mb-2">Categoría:</h5>
              <h6>{{categoria.categoria}}</h6>
              <h5 class="card-subtitle text-muted mb-2">Descripción:</h5>
              <h6>{{categoria.descripcion}}</h6>
              <p class="card-text mb-2">Libros de esta categoría:</p>
              <h6>{{categoria.cantidadLibros}}</h6>
            </div>

            <div class="d-flex justify-content-center">
                <div><a href="/edit-categorias/{{categoria.idCategoria}}?edit=true" class="btn btn-warning me-1" >Editar</a></div>
              <form class="form-inline" action="/delete-categorias" method="post">
                <input type="hidden" name="categoriaId" value="{{categoria.idCategoria}}" />
                <button type="submit" class="btn btn-danger ms-1">Eliminar</button>
              </form>
            </div>

          </div>

        {{/each}}
      {{else}}

        <h1>No hay categorias agregadas</h1>

      {{/if}}

    </div>
  </div>
</div>